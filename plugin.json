{
	"name": "custom.remote.python.ssl_events",
	"version": "1.014",
	"type": "python",
	"entity": "CUSTOM_DEVICE",
	"metricGroup": "tech.CertificateCheck",
	"processTypeNames": ["PYTHON"],
	"technologies": ["SSL/TLS Certificates"],
	"favicon": "https://img.icons8.com/windows/32/000000/tls.png",
	"source": {
		"package": "activegate_plugin_certs",
		"className": "CertsPluginRemote",
		"install_requires": ["requests>=2.6.0","click","pyopenssl"],
		"activation": "Remote"
	},
	"configUI": {
		"displayName": "Certificate Expiry Check - Events",
		"properties": [
		{   "key": "poll_interval", 
			"displayName": "Poll Interval", 
			"displayOrder": 1, 
			"displayHint": "How often a certificate should be checked in minutes"
		},	
		{
			"key": "period",
			"displayName": "Event Period Threshold",
			"displayOrder": 2,
			"displayHint": "Days"
		},
		{
			"key": "hosts",
			"displayName": "Hosts",
			"displayOrder": 3,
			"displayHint": "Comma seperated list of the Host certificates to monitor eg. www.google.com443,www.example.com:443"
		},
		{
			"key": "alert_period",
			"displayName": "Alert Period Threshold",
			"displayHint": "Days"
		},
		{ "key" : "alert_interval", "displayName": "Alert interval", "displayOrder": 4, "displayHint": "How often an alert is raised", "defaultValue": 360},
		{ "key" : "event_interval", "displayName": "Event interval", "displayOrder": 5, "displayHint": "How often an event is raised", "defaultValue": 240}
		
	]
	},
	"properties": [
	{ 
	  "key": "poll_interval", 
	  "type": "Integer", 
	  "defaultValue": 600
    },	
	{ 
	  "key": "period", 
	  "type": "Integer", 
	  "defaultValue": 14
	},
	{ 
		"key": "hosts", 
		"type": "Textarea"
	},
	{ 
		"key": "alert_period", 
		"type": "Integer", 
		"defaultValue": 7
	  },
	{
		"key": "state_interval",
		"type": "Integer",
		"defaultValue": 60
	  },
	  {
		"key": "alert_interval",
		"type": "Integer",
		"defaultValue": 360
	  },
	  {
		"key": "event_interval",
		"type": "Integer",
		"defaultValue": 240
	  }
	  
	
    ],
	"metrics": [{
			"entity": "CUSTOM_DEVICE",
			"timeseries": {
				"key": "counter",
				"unit": "Count",
				"displayname": "Certificate Expiry Check - Events"
			}
		}
	],
	"ui": {

	}
}